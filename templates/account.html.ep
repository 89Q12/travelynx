<h1>Account</h1>
% my $acc = get_user_data();
<div class="row">
	<table class="striped">
		<tr>
			<th scope="row">Name</th>
			<td><%= $acc->{name} %></td>
		</tr>
		<tr>
			<th scope="row">Mail</th>
			<td><%= $acc->{email} %></td>
		</tr>
		<tr>
			<th scope="row">Registriert am</th>
			<td><%= $acc->{registered_at}->strftime('%d.%m.%Y %H:%M') %></td>
		</tr>
	</table>
</div>

